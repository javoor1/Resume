<%= form_for(@portfolio_item) do |f| %>

  <div class="row">
    <div class="col-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_area :subtitle, class: "form-control" %>
      </div>

      <% if false #TODO Images%>
      <div class="form-group">
        <%= f.file_field :main_image %>
      </div>
      

      <div class="form-group">
        <%= f.file_field :thumb_image %>
      </div>
      <% end %>
      

    </div>
    

    <div class="col-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
    </div>
  </div> 


  <hr>
  <div class="col-12">
    <h2>Techonologies Used</h2>
    <%= f.fields_for :technologies do |technology_form| %>
      <div class="form-group">
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name, class: "form-control" %>
      </div>
    <% end %>
     <div class="form-group">
      <%= f.submit "Save portfolio_item", class: "btn btn-primary" %>
    </div>
  </div>

 
<% end %>




