<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_path %>

<% @portfolio_items.each do |item| %>
	<p><%= link_to item.title, portfolio_show_path(item) %></p>
	<p><%= item.subtitle %></p>
	<p><%= item.body %></p>
	<p><%= image_tag(item.main_image) unless item.main_image.nil? %></p>
	<p><%= image_tag(item.thumb_image) unless item.thumb_image.nil? %></p>
	<%= link_to "Edit Item", edit_portfolio_path(item) %> <!-- Se puede mandar item.id -->
	<%= link_to 'Delete Portfolio Item', item, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>